<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white" />



    <ViewFlipper
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewflipper"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewflipper"
        android:id="@+id/ll">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:text="Home"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/contactBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:text="Contact"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:onClick="showpopup"
            android:text="Visa"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_margin="2dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            android:onClick="open"
            android:text="Air Ticket"
            android:textAllCaps="false"
            android:textColor="@color/blue" />

    </LinearLayout>




    <TextView
        android:id="@+id/ht"
        android:layout_below="@+id/ll"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOLYDAY TOUR"/>
    <TextView
        android:id="@+id/hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOLYDAY PACKAGES"
        android:layout_below="@+id/ht"
        android:textColor="@color/blue"
        android:gravity="center"
        android:textSize="22dp"
        />

    <ImageView
        android:layout_below="@id/hp"
        android:layout_marginTop="15dp"
        android:id="@+id/iv1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/img2"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/hp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img3" />
    <ImageView
        android:id="@+id/iv3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/hp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:text="   Malayshia\n3Night4days"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv2"
        android:text="   Malayshia\n5Night6days"
        android:layout_marginLeft="130dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv2"
        android:text="   Malayshia\n7Days6Nights"
        android:layout_marginLeft="250dp"
        android:textColor="@color/black"
        />


</RelativeLayout>

