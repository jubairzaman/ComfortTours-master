<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white" />



    <ViewFlipper
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewflipper"

        />


    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/viewflipper"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_button"
        android:text="Home"
        android:textSize="10dp"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/custom_button"
        android:text="Home Service"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn3"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_button"
        android:onClick="showpopup"
        android:text="Visa"
        android:textSize="10dp"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/custom_button"
        android:onClick="open"
        android:text="Air Ticket"
        android:textSize="10dp"
        android:layout_below="@+id/viewflipper"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/blue" />


    <TextView
        android:id="@+id/ht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewflipper"
        android:layout_marginTop="166dp"
        android:gravity="center"
        android:text="HOLYDAY TOUR"
        android:textSize="17dp" />
    <TextView
        android:id="@+id/hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOLYDAY PACKAGES"
        android:layout_below="@+id/ht"
        android:textColor="@color/blue"
        android:gravity="center"
        android:textSize="22dp"
        />

    <ImageView
        android:layout_below="@id/hp"
        android:layout_marginTop="15dp"
        android:id="@+id/iv1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/img2"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/hp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img3" />
    <ImageView
        android:id="@+id/iv3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/hp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:text="   Malayshia\n3Night4days"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv2"
        android:text="   Malayshia\n5Night6days"
        android:layout_marginLeft="130dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv2"
        android:text="   Malayshia\n7Days6Nights"
        android:layout_marginLeft="250dp"
        android:textColor="@color/black"
        />


</RelativeLayout>

