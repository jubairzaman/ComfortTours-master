<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white" />




<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/toolbar"
    android:id="@+id/ly1"
    android:layout_height="175dp">
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewflipper"

        />
</LinearLayout>



    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_below="@+id/ly1"
        android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


    <Button
        android:id="@+id/btn1"
        android:layout_width="120dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_button"
        android:text="Home"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:onClick="home"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/custom_button"
        android:text="Home Service"
        android:textSize="14dp"
        android:onClick="hs"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn3"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_button"
        android:onClick="showpopup"
        android:text="Visa"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/custom_button"
        android:onClick="open"
        android:text="Air Ticket"
        android:textSize="14dp"

        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly3"
        android:layout_width="match_parent"
        android:layout_below="@+id/ly2"
        android:layout_height="240dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">


    <TextView
        android:id="@+id/ht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HOLYDAY TOUR"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOLYDAY PACKAGES"
        android:layout_below="@+id/ht"
        android:textColor="@color/blue"
        android:gravity="center"
        android:textSize="15dp"
        />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@id/hp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/img2" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@id/hp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/img3" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@id/hp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="51dp"
        android:src="@drawable/img1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="0dp"
        android:textSize="12dp"
        android:text="   Malayshia\n3 Night 4 days"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv2"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Malayshia\n5 Night 6 days"
        android:textSize="12dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="250dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="      Singapore\n7 Days 6 Nights"
        android:textSize="12dp"
        android:textColor="@color/black" />

    </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_below="@+id/ly3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/custom_button2"
            android:onClick="call"
            android:text="Call Now" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_toStartOf="@+id/button"
            android:layout_toLeftOf="@+id/button"
            android:text="For Any Kind Of Information"
            android:textColor="@color/blue" />

    </RelativeLayout>
</LinearLayout>

</RelativeLayout>


</LinearLayout>

